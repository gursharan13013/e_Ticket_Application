@* Define model*@
@model IEnumerable<Cinema>

@*Define ViewData*@
@{
    ViewBag.Title = "List of Cinemas";
}

@*code*@
<h1>
    @ViewBag.Title
</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.Logo)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Name)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary">Edit</a> <i class="bi-globe"></i>
                            |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-danger"><i class="bi"></i> Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>



