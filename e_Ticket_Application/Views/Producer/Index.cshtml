@* Define model*@
@model IEnumerable<Producer>

@*Define ViewData*@
@{
    ViewBag.Title = "List of Producers";
}

@*code*@
<h1>
    @ViewBag.Title
</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(Model => Model.FullName)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureUrl" alt="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-danger"><i class="bi"></i> Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

